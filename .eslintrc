ecmaFeatures:
    jsx: true

env:
    browser: true
    es6: true
    node: true

extends: "eslint:recommended"

rules:
    no-console: [ 0 ]
    no-extra-boolean-cast: [ 0 ]
    indent: [ 2, 4 ]
    quotes: [ 2, "single" ]
    linebreak-style: [ 2, "unix" ]
    semi: [ 2, "always" ]
    no-unused-vars: [ 2, { "vars": "all", "args": "none" } ]
    spaced-comment: [ 2, "always" ]
